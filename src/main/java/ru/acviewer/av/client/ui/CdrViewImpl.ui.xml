<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" 
	xmlns:bd="urn:import:com.github.gwtbootstrap.datetimepicker.client.ui"
	xmlns:m="urn:import:com.google.gwt.media.client"
	xmlns:dt="urn:import:ru.acviewer.av.client.widget">

	<ui:style src="CallDataRecord.css" type="ru.acviewer.av.client.ui.CdrViewImpl.AppResource" />
	<ui:with type="ru.acviewer.av.client.i18n.constants.AppConstants" field="constants" />
	<ui:with type="ru.acviewer.av.client.i18n.messages.AppMessages" field="messages" />

	<g:HTMLPanel>
		<b:Container>
			<b:Row>
				<b:Column size="11">
					<dt:SearchEditor ui:field="searchEditor"/>
				</b:Column>
				<b:Column size="1">
					<b:Button ui:field="searchButton" text="{messages.callSearch}"
							addStyleNames="btn pull-right" />
				</b:Column>
			</b:Row>
		</b:Container>

		<b:Container>
			<b:Row>
				<b:Column size="12">
					<b:CellTable ui:field="callDataRecords" pageSize="50" 
						condensed="true" hover="true" />
				</b:Column>
			</b:Row>
		</b:Container>

		<b:Container>
			<b:Row>
				<b:Column size="12">
					<b:SimplePager display="{callDataRecords}" location="RIGHT"
						fastForwardRows="100" addStyleNames="{style.acv-pager}" />
				</b:Column>
			</b:Row>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder>